[ -n "$SDEROOT" ] ||
	export SDEROOT=$( cd "${0%/*}/.."; pwd -P )

. $SDEROOT/lib/libsde.in

list_usage() {
	local progname=${0##*/}
	cat <<EOT
Usage:	$progname [--cfg <config>] [-erkl] [ITEMS...]
EOT
}

shortopts='c:erkl'
longopts='cfg:,extenders,repositories,checksum,location'
options=$( getopt -o "$shortopts" -l "$longopts" -- "$@" )
if [ $? -ne 0 ]; then
	list_usage
	exit -1
fi

# load new arguments list
eval set -- "$options"

config=
extenders=
repositories=
checksum=
location=

while [ $# -gt 0 ]; do
	case "$1" in
		--)		shift; break ;;

		-c|--cfg)	shift; config="$1" ;;

		-e|--extenders)
			extenders=yes ;;
		-r|--repositories)
			repositories=yes ;;
		-k|--checksum)
			checksum=yes ;;
		-l|--location)
			location=yes ;;
	esac
	shift
done

echo_abort 1 "Not yet implemented"
