#Description: generate lists needed by other commands

set -e

[ -n "$SDEROOT" ] ||
	export SDEROOT=$( cd "${0%/*}/.."; pwd -P )

. $SDEROOT/lib/libsde.in

list_usage() {
cat <<EOT
Usage: sde list [DISCRIMINATOR] [OPTIONS]

Valid discrimintors are:
	* package (pkg)
	* download

Try \`sde help list\` for more details.
EOT
}

option=help

# discriminator
if [ $# -gt 0 ]; then
	option="$1"; shift
fi

# multiplex
case "$option" in
	package|pkg)	exec $SDEROOT/bin/sde-list-pkg "$@" ;;
	download)	exec $SDEROOT/bin/sde-list-download "$@" ;;
	help)		list_usage	;;
	*)		echo_error "Unknown discriminator '$option'."
			list_usage
			exit 1 ;;
esac

