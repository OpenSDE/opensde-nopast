complist=
compdefault=

# generate a list of available compressors and choose the default
for compressor in gzip lzo xz; do
	if pkgcheck "$compressor" X ; then
		var_append complist ' ' "$compressor Create_${compressor}_compressed_SquashFS"
		compdefault="$compressor"
	fi
done

if [ ! -z "$complist" ]; then
	choice SDECFG_IMAGE_SQUASHFS_COMP $compdefault $complist
fi

unset complist
unset compdefault
