DOCDIR=../../doc
MANPAGES=$(addprefix $(DOCDIR)/,$(addsuffix .1,$(basename $(wildcard man/*.txt))))

.PHONY: all clean

all: $(MANPAGES)

clean:
	rm -f *.xml *.1

$(DOCDIR)/%.1: %.xml
	@echo '[MAN] $@'
	@xmlto man -o $(DOCDIR)/man $<

%.xml: %.txt
	@echo '[AD] $<'
	@asciidoc -b docbook -d manpage -o $@ $<
