CC=gcc
CFLAGS=-Wall -O2 -ldl -shared

LIB=fl_wrapper.so
GENERATED=fl_wrapper_generated.c
SRCS=fl_wrapper.c fl_wrapper_execl.c $(GENERATED)

.PHONY: clean

$(LIB): $(SRCS)
	$(CC) $(CFLAGS) -o $@ $<

clean:
	@rm -vf $(LIB) $(GENERATED) $(GENERATED).tmp

$(GENERATED): $(GENERATED).sh
	$(SHELL) $< > $(GENERATED).tmp
	mv $(GENERATED).tmp $(GENERATED)
