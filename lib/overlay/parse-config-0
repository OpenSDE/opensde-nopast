. "$base/lib/overlay/overlay-functions.in"

if [ -d "$confdir/install" ]; then
	overlay_apply_dirs="$confdir/install"
else
	overlay_apply_dirs=
fi

overlay_apply_hook() {
	local d=
	for d in $overlay_apply_dirs; do
		[ -d "$d" ] || continue
		overlay_apply -q -- "$d"
	done
}
hook_add postmake 6 'overlay_apply_hook'
