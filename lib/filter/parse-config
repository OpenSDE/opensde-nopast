if [ "$SDECFG_FILTER_NODEVEL" = "1" ]; then
	echo_warning "filter: No developent files will be flisted"

	filter_nodevel()
	{
		local pattern="-e '/\.\(c\|h\|hpp\|hxx\|o\|a\|la\|m4\|pc\)$/d;'"

		case "$pkg" in
		gcc)
			pattern="$pattern -e '/^usr\/\(bin\|include\|libexec\|lib\/gcc\|share\)/d;' -e '/lib\/cpp/d;'"
			;;
		glibc)
			pattern="$pattern -e '/^usr\/include/d;'"
			;;
		esac

		eval "sed -i $pattern '$builddir/flist.txt'"
	}

	hook_add postflist 5 "filter_nodevel"
fi
