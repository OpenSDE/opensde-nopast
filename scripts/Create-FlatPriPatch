# --- SDE-COPYRIGHT-NOTE-END ---

tempfile=`mktemp`

counter=1000
for pkg in $( ./bin/sde-list package | cut -f4,5 -d' ' | tr ' ' / )
do
	xcounter="${counter%?}.${counter#???}00"
	[ $pkg = base/sde-debug ] && xcounter=999.900
	[ $pkg = base/sde-src ] && xcounter=999.800
	sed -e 's,^\(\[P\] .* \)[0-9\.][0-9\.]*$,\1'$xcounter',' \
		< package/$pkg/${pkg#*/}.desc > $tempfile
	diff -u ./package/$pkg/${pkg#*/}.desc $tempfile
	(( counter = counter + 1 ))
done

